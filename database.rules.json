{
  "rules": {
      ".read": false,
      ".write": false,
      "users": {
      "$userId": {
          ".read": "$userId === auth.uid",
          ".write": "$userId === auth.uid"
      }
      },
      "categories": {
      ".read": true,
      ".write": "root.child('users').child('auth.uid').child('isAdmin').val() == true"
      },
      "products": {
      ".read": true,
      ".write": "root.child('users').child('auth.uid').child('isAdmin').val() == true"
      }
  }
}